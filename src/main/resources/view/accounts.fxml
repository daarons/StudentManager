<BorderPane xmlns:fx="http://javafx.com/fxml/1" id="GridPane" stylesheets="@/css/style.css" 
            fx:controller="com.daarons.controller.AccountsController" minHeight="400"
            minWidth="450" maxHeight="Infinity" maxWidth="Infinity">
    <top>
        <HBox BorderPane.alignment="TOP_LEFT" HBox.hgrow="ALWAYS"
              maxHeight="Infinity" maxWidth="Infinity">
            <BorderPane.margin>
                <Insets bottom="3" top="3" />
            </BorderPane.margin>
            <children>
                <fx:include source="/view/head.fxml"/>
            </children>
        </HBox>
    </top>
    <center>
        <GridPane fx:id="gridPane" alignment="CENTER" hgap="25" vgap="25" >
            <padding>
                <Insets top="25" right="25" bottom="25" left="25"/>
            </padding>
            <rowConstraints>
                <RowConstraints vgrow="ALWAYS" percentHeight="8" />
                <RowConstraints vgrow="ALWAYS" percentHeight="84" />
                <RowConstraints vgrow="ALWAYS" percentHeight="8" />
            </rowConstraints>
            <children>                
                <HBox spacing="10" alignment="TOP_LEFT" GridPane.columnIndex="0" 
                      GridPane.rowIndex="0" maxHeight="Infinity" maxWidth="Infinity" 
                      GridPane.vgrow="ALWAYS" GridPane.hgrow="ALWAYS">
                    <TextField fx:id="searchAccountsField" id="searchAccountsField" 
                               promptText="Search" HBox.hgrow="ALWAYS" 
                               onKeyReleased="#searchAccounts" />                   
                </HBox>
                <!-- TreeTableView goes here from AccountsController.java -->
                <HBox spacing="10" alignment="TOP_LEFT" GridPane.columnIndex="0" 
                      GridPane.rowIndex="2" maxHeight="Infinity" maxWidth="Infinity" 
                      GridPane.vgrow="ALWAYS" GridPane.hgrow="ALWAYS">
                    <TextField fx:id="addAccountField" id="addAccountField" 
                               promptText="Add Account" HBox.hgrow="ALWAYS" 
                                onAction="#addAccount"/> 
                    <Button fx:id="addBtn" id="addBtn" minHeight="30" 
                        maxHeight="Infinity" maxWidth="60" HBox.hgrow="ALWAYS" 
                        onAction="#addAccount"/>                  
                </HBox>
            </children>
        </GridPane>
    </center>
</BorderPane>
